@model IEnumerable<ProductManagementSystem.Models.Product>
@{
    ViewData["Title"] = "Products List";
}
<h2> Products List</h2>
<div class="row pb-3">
    <div class="col-6 offset-6 text-end">
        <a asp-controller="Products" asp-action="Create" class="btn btn-secondary">
            <i class="bi bi-plus-circle"></i> Create New Poduct
        </a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Description</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Products" asp-action="Update" asp-route-Id="@product.Id"
                           class="btn btn-success mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Products" asp-action="Delete" asp-route-Id="@product.Id"
                           class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>